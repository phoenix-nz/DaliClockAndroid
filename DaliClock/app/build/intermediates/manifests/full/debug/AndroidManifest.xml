<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.jwz.daliclock"
    android:versionName="2.42/26.02.2015" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name="org.jwz.daliclock.DaliDreamService"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/service_label"
            android:permission="android.permission.BIND_DREAM_SERVICE" >
            <intent-filter>
                <action android:name="android.service.dreams.DreamService" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- Point to additional information for this dream (optional) -->
            <meta-data
                android:name="android.service.dream"
                android:resource="@xml/dream_data" />
        </service>

        <activity
            android:name="org.jwz.daliclock.DaliClockSettingsActivity"
            android:label="@string/activity_preferences"
            android:theme="@style/AppTheme" />
        <activity
            android:name="org.jwz.daliclock.DaliClockActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_dali_clock"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>